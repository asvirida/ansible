UPDATE wp_options SET option_value = REPLACE(option_value, 'http://{{ http_old_host }}', 'http://{{ http_new_host }}') WHERE option_name = 'home' OR option_name = 'siteurl';
UPDATE wp_posts SET guid = REPLACE(guid, 'http://{{ http_old_host }}','http://{{ http_new_host }}');
UPDATE wp_posts SET post_content = REPLACE(post_content, 'http://{{ http_old_host }}', 'http://{{ http_new_host }}');
